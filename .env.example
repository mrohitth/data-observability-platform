# Data Observability Platform - Environment Configuration Template
# Copy this file to .env and update with your actual values

# Database Configuration
BATCH_DB_HOST=localhost
BATCH_DB_PORT=5432
BATCH_DB_NAME=analytics_db
BATCH_DB_USER=airflow
BATCH_DB_PASSWORD=airflow

CDC_DB_HOST=localhost
CDC_DB_PORT=5433
CDC_DB_NAME=warehouse_db
CDC_DB_USER=postgres
CDC_DB_PASSWORD=postgres

# Connection Settings
DB_TIMEOUT=30
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Retry Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_BACKOFF_FACTOR=2
INITIAL_RETRY_DELAY=1.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=structured
LOG_DIR=logs
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Monitoring Configuration
VOLUME_ANOMALY_THRESHOLD=3.0
FRESHNESS_THRESHOLD_MINUTES=30
CONTRACT_VALIDATION_MODE=strict

# Alerting Configuration
ALERT_SEVERITY=CRITICAL
ALERT_WEBHOOK_ENABLED=false
ALERT_EMAIL_ENABLED=false

# Performance Configuration
SAMPLING_SIZE=100
CONCURRENT_WORKERS=4
BATCH_SIZE=1000

# Security Configuration
ENABLE_SSL=false
SSL_CERT_PATH=
SSL_KEY_PATH=
